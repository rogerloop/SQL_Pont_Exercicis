{
  "sql.linting.enabled": true,
  "sql.formatting.keyword": "uppercase",
  "sqltools.format.tabSize": 4
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.formatOnSave": false
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "sqltools.connections": [
    {
      "mysqlOptions": {
        "authProtocol": "default",
        "enableSsl": "Disabled"
      },
      "ssh": "Disabled",
      "previewLimit": 500,
      "server": "localhost",
      "port": 3306,
      "driver": "MySQL",
      "name": "MySQL IT Academy",
      "username": "root",
      "database": "hospitales"
    }
  ]
}
